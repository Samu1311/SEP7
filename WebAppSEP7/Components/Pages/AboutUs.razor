@code {
    private string currentFunFact = "Gjensidige has been a trusted partner for over 200 years, serving millions of customers across the Nordics.";
    private readonly List<string> funFacts = new()
    {
        "Gjensidige has been a trusted partner for over 200 years, serving millions of customers across the Nordics.",
        "Our innovative solutions help thousands of customers every day.",
        "Gjensidige invests heavily in sustainability and environmental initiatives.",
        "We prioritize customer satisfaction above all else.",
        "Our team is dedicated to ensuring peace of mind for our clients."
    };

    protected override void OnInitialized()
    {
        StartFunFactRotation();
    }

    private async void StartFunFactRotation()
    {
        while (true)
        {
            await Task.Delay(5000); // Change every 5 seconds
            var random = new Random();
            currentFunFact = funFacts[random.Next(funFacts.Count)];
            StateHasChanged();
        }
    }
}
